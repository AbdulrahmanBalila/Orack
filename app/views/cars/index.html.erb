<p style="color: green"><%= notice %></p>
<!--Table head-->
<table class="table table-hover align-middle">
  <thead class="table-dark">
    <tr>
      <th>Main Image</th>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>
<!--Table body-->
  <tbody id="cars">
    <% @cars.each do |car| %>
      <tr>
        <td><%= image_tag car.images[0].variant(resize_to_fill: [100,50]) %></td>
        <td><%= car.make %></td>
        <td><%= car.model %></td>
        <td><%= car.year %></td>
        <td><%= link_to "Show", car , class:"btn btn-outline-primary btn-sm"%></td>
        <td><%= link_to "Edit", edit_car_path(car), class:"btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to "Delete", car, data: { turbo_method: :delete, turbo_confirm: "U Sure?" }, class:"btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= button_to "New Car", new_car_path, method: :get, class:"btn btn-primary" %>

